{
  "name": "docuvault-v2",
  "version": "2.0.0",
  "description": "Document Management System - Version 2",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "cd backend && npm start",
    "dev": "cd backend && npm run dev",
    "build": "cd frontend && npm install && npm run build",
    "build:prod": "npm run install-all && npm run build",
    "install-all": "npm install && cd backend && npm install && cd frontend && npm install --production=false"
  },
  "keywords": [
    "documents",
    "management",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Bastin",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
